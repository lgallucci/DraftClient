<Window x:Class="DraftClient.View.SpinnyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DraftClient.Themes.Metro.Light" 
        Height="200" Width="200" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Gray Theme -->
                <ResourceDictionary Source="../Themes/Metro/Light/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="../Themes/Metro/Light/Metro.MSControls.Toolkit.Implicit.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Gray Theme -->
            <SolidColorBrush x:Key="BackgroundKey" Color="{StaticResource Color_009}" />

        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundKey}">
        <StackPanel>
            <local:MetroSpinny x:Name="ConnectSpinny" Margin="0 20 0 20" Height="100" Width="100" Visibility="Visible"></local:MetroSpinny>
            <TextBlock HorizontalAlignment="Center">Connecting to Draft...</TextBlock>
        </StackPanel>
    </Grid>
</Window>
