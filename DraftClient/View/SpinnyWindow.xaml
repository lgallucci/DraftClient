<Controls:MetroWindow x:Class="DraftClient.View.SpinnyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Height="150" Width="150" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" ShowTitleBar="False" ShowCloseButton="False">
    <Grid>
        <StackPanel>
            <Controls:ProgressRing Margin="0 20 0 20" IsActive="True" />
            <TextBlock x:Name="LoadingMessage" HorizontalAlignment="Center" FontFamily="Segoe UI">Connecting to Draft...</TextBlock>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
