<UserControl x:Class="DraftClient.View.PlayerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:DraftClient.Converters"
        Loaded="UserControl_Loaded" Background="AntiqueWhite">
    <UserControl.Resources>
        <!--Create an instance of the converter for Email-->
        <c:EnumConverter x:Key="EnumConverter" />
        <CollectionViewSource x:Key="cvsPlayers" Source="{Binding Players}" Filter="CollectionViewSource_Filter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Margin="5" HorizontalAlignment="Center">
            <TextBlock Text="QBs" />
            <CheckBox Name="cbQB" IsChecked="True" />
            <TextBlock Text=" WRs" />
            <CheckBox Name="cbWR" IsChecked="True" />
            <TextBlock Text=" RBs" />
            <CheckBox Name="cbRB" IsChecked="True" />
            <TextBlock Text=" TEs" />
            <CheckBox Name="cbTE" IsChecked="True" />
            <TextBlock Text=" Ks" />
            <CheckBox Name="cbK" IsChecked="True" />
            <TextBlock Text=" DEFs" />
            <CheckBox Name="cbDEF" IsChecked="True" />
        </WrapPanel>
        <DataGrid Grid.Row="1" Name="dataGrid1" ItemsSource="{Binding Source={StaticResource cvsPlayers}}" AutoGenerateColumns="False" 
                  IsReadOnly="True" HorizontalScrollBarVisibility="Hidden" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ADP"  Binding="{Binding ADP}" Width="*" />
                <DataGridTextColumn Header="Player Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Position" Binding="{Binding Position, Converter={StaticResource EnumConverter}}" Width="*" />
                <DataGridTextColumn Header="Team" Binding="{Binding Team}" Width="*" />
                <DataGridTextColumn Header="Bye Week" Binding="{Binding ByeWeek}" Width="*" />
                <DataGridTextColumn Header="Projected Points" Binding="{Binding ProjectedPoints}" Width="2*" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPicked}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>
